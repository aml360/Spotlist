{
	"name": "spotlist",
	"version": "0.1.0",
	"description": "Rviewer nodejs challenge",
	"main": "dist/main.js",
	"author": "Adrian Molina <aml360esp@gmail.com>",
	"license": "ISC",
	"directories": {
		"doc": "doc"
	},
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "rimraf dist && nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "NODE_ENV=production node dist/backend/src/main",
		"start:prod_compiled": "NODE_ENV=production node dist/index",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"test": "jest",
		"migration:generate": "npm run typeorm -- migration:generate --config ./ormconfig.json --name",
		"migration:run": "npm run typeorm -- migration:run --config ./ormconfig.json",
		"migration:revert": "npm run typeorm -- migration:revert --config ./ormconfig.json",
		"typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js"
	},
	"dependencies": {
		"@nestjs/common": "^8.3.1",
		"@nestjs/core": "^8.3.1",
		"@nestjs/jwt": "^8.0.0",
		"@nestjs/passport": "^8.2.1",
		"@nestjs/platform-express": "^8.3.1",
		"@nestjs/swagger": "5.2.0",
		"@nestjs/typeorm": "^8.0.3",
		"@node-rs/bcrypt": "^1.6.0",
		"class-transformer": "0.5.1",
		"class-validator": "0.13.2",
		"express": "^4.17.1",
		"js-yaml": "^4.1.0",
		"lodash": "^4.17.21",
		"mocha": "^9.2.1",
		"passport": "^0.5.2",
		"reflect-metadata": "^0.1.13",
		"rxjs": "^7.5.4",
		"sqlite3": "^5.0.2",
		"swagger-ui-express": "^4.3.0",
		"typeorm": "^0.2.43"
	},
	"devDependencies": {
		"@nestjs/cli": "^8.2.1",
		"@nestjs/schematics": "^8.0.6",
		"@nestjs/testing": "^8.3.1",
		"@types/express": "^4.17.11",
		"@types/jest": "^27.4.0",
		"@types/js-yaml": "^4.0.5",
		"@types/lodash": "^4.14.178",
		"@types/node": "^17.0.19",
		"@types/passport": "^1.0.7",
		"@types/supertest": "^2.0.10",
		"@types/validator": "^13.7.1",
		"jest": "^27.5.1",
		"prettier": "^2.2.1",
		"rimraf": "^3.0.2",
		"supertest": "^6.1.3",
		"ts-jest": "^27.1.3",
		"ts-loader": "^9.2.6",
		"ts-node": "^10.5.0",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.2.3"
	}
}
